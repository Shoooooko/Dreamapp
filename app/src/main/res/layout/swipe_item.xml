<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackGround"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView

            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="@dimen/summary_size"
            android:textStyle="bold"
            android:text="自分をひと言で" />


        <LinearLayout
            android:id="@+id/person_info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_margin="8dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/person_name_size"
                    android:text="name" />

                <TextView
                    android:id="@+id/motto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="@dimen/person_motto_size"
                    android:text="slogan" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tp_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="@dimen/large_size"
                android:textStyle="bold"
                android:text="Turning Point" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tp_age"
                    android:layout_width="@dimen/age_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="@dimen/small_size"
                    android:text="age" />

                <TextView
                    android:id="@+id/tp_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="@dimen/small_size"
                    android:text="したこと" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="8dp"
            />

        <TextView
            android:id="@+id/cr_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="@dimen/large_size"
            android:textStyle="bold"
            android:text="Career"
            app:layout_constraintStart_toStartOf="parent" />

        <ScrollView
            android:id="@+id/cr_list"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/cr_age1"
                        android:layout_width="@dimen/age_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/small_size"
                        android:text="age1" />

                    <TextView
                        android:id="@+id/cr_desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/small_size"
                        android:text="cr_desc1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/cr_age2"
                        android:layout_width="@dimen/age_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/small_size"
                        android:text="age2" />

                    <TextView
                        android:id="@+id/cr_desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/small_size"
                        android:text="cr_desc2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/cr_age3"
                        android:layout_width="@dimen/age_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/small_size"
                        android:text="age3" />

                    <TextView
                        android:id="@+id/cr_desc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/small_size"
                        android:text="cr_desc3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/cr_age4"
                        android:layout_width="@dimen/age_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/small_size"
                        android:text="age4" />

                    <TextView
                        android:id="@+id/cr_desc4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/small_size"
                        android:text="cr_desc4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/cr_age5"
                        android:layout_width="@dimen/age_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/small_size"
                        android:text="age5" />

                    <TextView
                        android:id="@+id/cr_desc5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/small_size"
                        android:text="cr_desc5" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>
